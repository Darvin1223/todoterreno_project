<!DOCTYPE html>
<html lang="es">


<%- include('partials/head.ejs')%>

    <body>

        <%- include('partials/header.ejs')%>
            <% if(propiedad.lenght !== 0){ %>
                <h1 class="fw-300 centrar-texto">
                    <%= propiedad.name_propiedad_approve %>
                </h1>

                <div class="imagenes_content">
                    <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="ImagenesPropiedades/<%= JSON.parse(propiedad.images_propiedad_approve)[0] %>" class="d-block w-100" alt="...">
                            </div>

                            <% JSON.parse(propiedad.images_propiedad_approve).forEach(image => { %>


                                <% if(JSON.parse(propiedad.images_propiedad_approve)[0] != image){ %>


                                    <div class="carousel-item">
                                        <img src="ImagenesPropiedades/<%= image %>" class="d-block w-100" alt="...">
                                    </div>


                                    <% } %>




                                        <% }); %>



                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
                    </div>
                </div>





                <main class="contenedor secction contenido-centrado">
                    <div class="resumen-propiedad">
                        <p class="Precio">
                             <%= propiedad.modena_approve %> :
                            <%=propiedad.price_propiedad_approve%>
                        </p>
                        <ul class="iconos-caracteristicas">
                            <li>
                                <img src="img/icono_wc.svg" alt="icono_wc" />
                                <p>
                                    <%=propiedad.bathroom_propiedad_approve%>
                                </p>
                            </li>
                            <li>
                                <img src="img/icono_estacionamiento.svg" style="width: 50%;" alt="icono_estacionamiento" />
                                <p>
                                    <%=propiedad.parking_propiedad_approve%>
                                </p>

                            </li>
                            <li>
                                <img src="img/icono_dormitorio.svg" style="width: 50%;" alt="icono_dormitorio" />
                                <p>
                                    <%=propiedad.bedrooms_propiedad_approve%>
                                </p>
                            </li>
                        </ul>
                    </div>
                    <%- propiedad.description_propiedad_approve %>
                        <% } %>
                </main>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

                <%- include('partials/footer.ejs')%>
    </body>

</html>